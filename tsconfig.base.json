{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pension/ui": ["libs/ui/src/index.ts"],
      "beneficiary/Module": ["apps/beneficiary/src/remote-entry.ts"],
      "contribution/Module": ["apps/contribution/src/remote-entry.ts"],
      "finance/Module": ["apps/finance/src/remote-entry.ts"],
      "registration/Module": ["apps/registration/src/remote-entry.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
